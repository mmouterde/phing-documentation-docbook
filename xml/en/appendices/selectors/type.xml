<refentry version="5.0" xml:id="phing.selectors.type"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:ns6="http://www.w3.org/1999/xlink"
          xmlns:ns5="http://www.w3.org/1998/Math/MathML"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:ns3="http://www.w3.org/2000/svg"
          xmlns:ns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>Type</refname>

    <refpurpose>The <code>&lt;type&gt;</code> tag selects files of a certain
    type: directory or regular.</refpurpose>
  </refnamediv>

  <refsect1 role="example">
    &ref.title.example;

    <programlisting language="xml"><![CDATA[<fileset dir="${src}">
  <type type="dir"/>
</fileset>]]></programlisting>
  </refsect1>

  <refsect1 role="parameters">
    &ref.title.attributes;

    <table xml:id="phing.selectors.type.parameters">
      <caption>Attributes for the <code>&lt;type&gt;</code> selector</caption>

      &taskAttributes.table.titlesLine.all;

      <tr>
        <td class="name"><parameter>type</parameter></td>

        <td class="type"><type></type></td>

        <td class="description">The type of file which should be tested for.
        Either <code>file</code> or <code>dir</code>.</td>

        <td class="default">&attributes.defaultValue.NA;</td>

        <td class="required">&attributes.required.yes;</td>
      </tr>
    </table>
  </refsect1>
</refentry>
