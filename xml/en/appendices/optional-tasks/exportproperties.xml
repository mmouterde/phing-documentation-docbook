<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE refentry [
<!ENTITY % entities SYSTEM "../../entities.ent">
%entities;
]>
<refentry version="5.0" xml:id="phing.optionaltasks.exportproperties"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:ns6="http://www.w3.org/1999/xlink"
          xmlns:ns5="http://www.w3.org/1998/Math/MathML"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:ns3="http://www.w3.org/2000/svg"
          xmlns:ns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>ExportPropertiesTask</refname>

    <refpurpose>Exports all defined properties to a specified
    file.</refpurpose>
  </refnamediv>

  <refsect1 role="example">
    &ref.title.example;

    <programlisting language="xml"><![CDATA[<exportproperties targetfile="output.props" />]]></programlisting>
  </refsect1>

  <refsect1 role="parameters">
    &ref.title.attributes;

    <table xml:id="phing.optionaltasks.exportproperties.parameters">
      <caption>Attributes for
      <classname>ExportPropertiesTask</classname></caption>

      &taskAttributes.table.titlesLine.all;

      <tr>
        <td class="name"><parameter>targetfile</parameter></td>

        <td class="type"><type>String</type></td>

        <td class="description">Target file for saved properties</td>

        <td class="default">&attributes.defaultValue.NA;</td>

        <td class="required">&attributes.required.yes;</td>
      </tr>

      <tr>
        <td
        class="name"><parameter>disallowedPropertyPrefixes</parameter></td>

        <td class="type"><type>String</type></td>

        <td class="description">Exclude properties starting with these
        prefixes (separated by <code>,</code>)</td>

        <td class="default"><code>'host.', 'phing.', 'os.', 'php.', 'line.',
        'env.', 'user.'</code></td>

        <td class="required">&attributes.required.no;</td>
      </tr>
    </table>
  </refsect1>
</refentry>
