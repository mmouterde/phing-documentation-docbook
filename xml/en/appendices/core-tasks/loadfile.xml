<refentry version="5.0" xml:id="phing.coretasks.loadfile"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:ns6="http://www.w3.org/1999/xlink"
          xmlns:ns5="http://www.w3.org/1998/Math/MathML"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:ns3="http://www.w3.org/2000/svg"
          xmlns:ns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>LoadFileTask</refname>

    <refpurpose>The <classname>LoadFileTask</classname> loads the contents of
    a (text) file into a single property.</refpurpose>
  </refnamediv>

  <refsect1 role="example">
    &ref.title.example;

    <programlisting language="xml"><![CDATA[<loadfile property="version" file="version.txt"/>]]></programlisting>
  </refsect1>

  <refsect1 role="parameters">
    &ref.title.attributes;

    <table xml:id="phing.coretasks.loadfile.parameters">
      <caption>Attributes for <classname>LoadFileTask</classname></caption>

      &taskAttributes.table.titlesLine.all;

      <tr>
        <td class="name"><parameter>property</parameter></td>

        <td class="type"><type>String</type></td>

        <td class="description">The name of the property to set.</td>

        <td class="default">&attributes.defaultValue.NA;</td>

        <td class="required">&attributes.required.yes;</td>
      </tr>

      <tr>
        <td class="name"><parameter>file</parameter> (or
        <parameter>srcFile</parameter>)</td>

        <td class="type"><type>String</type></td>

        <td class="description">The file to load.</td>

        <td class="default">&attributes.defaultValue.NA;</td>

        <td class="required">&attributes.required.yes;</td>
      </tr>
    </table>
  </refsect1>

  <refsect1 role="nested">
    &ref.title.supportedNestedTags;

    <itemizedlist>
      <listitem>
        <para><link
        linkend="phing.appendices.corefilters"><code>&lt;filterchain&gt;</code></link></para>
      </listitem>
    </itemizedlist>
  </refsect1>
</refentry>
