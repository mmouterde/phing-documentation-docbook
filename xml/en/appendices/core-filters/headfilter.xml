<refentry version="5.0" xml:id="phing.corefilters.headfilter"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:ns6="http://www.w3.org/1999/xlink"
          xmlns:ns5="http://www.w3.org/1998/Math/MathML"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:ns3="http://www.w3.org/2000/svg"
          xmlns:ns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>HeadFilter</refname>

    <refpurpose>This filter reads the first <code>n</code> lines of a file;
    the others are not further passed through the filter chain.</refpurpose>
  </refnamediv>

  <refsect1 role="example">
    &ref.title.example;

    <para>Usage example:</para>

    <programlisting language="xml"><![CDATA[<filterchain>
  <headfilter lines="20" />
</filterchain>]]></programlisting>
  </refsect1>

  <refsect1 role="parameters">
    &ref.title.attributes;

    <table xml:id="phing.corefilters.headfilter.parameters">
      <caption>Attributes for the <code>&lt;headfilter&gt;</code>
      tag</caption>

      &taskAttributes.table.titlesLine.all;

      <tr>
        <td class="name"><parameter>lines</parameter></td>

        <td class="type"><type>Integer</type></td>

        <td class="description">Number of lines to read.</td>

        <td class="default"><code>10</code></td>

        <td class="required">&attributes.required.no;</td>
      </tr>
    </table>
  </refsect1>
</refentry>
