<refentry version="5.0" xml:id="phing.corefilters.tabtospaces"
          xmlns="http://docbook.org/ns/docbook"
          xmlns:ns6="http://www.w3.org/1999/xlink"
          xmlns:ns5="http://www.w3.org/1998/Math/MathML"
          xmlns:ns4="http://www.w3.org/1999/xhtml"
          xmlns:ns3="http://www.w3.org/2000/svg"
          xmlns:ns="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>TabToSpaces</refname>

    <refpurpose>The <classname>TabToSpaces</classname> filter replaces all tab
    characters with a given count of space characters.</refpurpose>
  </refnamediv>

  <refsect1 role="example">
    &ref.title.example;

    <programlisting language="xml"><![CDATA[<filterchain>
  <tabtospaces tablength="8" />
</filterchain>]]></programlisting>
  </refsect1>

  <refsect1 role="parameters">
    &ref.title.attributes;

    <table xml:id="phing.corefilters.tabtospaces.parameters">
      <caption>Attributes for the <code>&lt;tabtospaces&gt;</code>
      filter</caption>

      &taskAttributes.table.titlesLine.all;

      <tr>
        <td class="name"><parameter>tablength</parameter></td>

        <td class="type"><type>Integer</type></td>

        <td class="description">The number of space characters that a tab is
        to represent.</td>

        <td class="default"><code>8</code></td>

        <td class="required">&attributes.required.no;</td>
      </tr>
    </table>
  </refsect1>
</refentry>
